<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cisc.guessinggame.GameActivity"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:text="Please guess a number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textStatus1"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dip"
        android:id="@+id/button2"
        android:minHeight="30dp"
        android:layout_below="@+id/button1"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dip"
        android:id="@+id/button3"
        android:minHeight="30dp"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dip"
        android:id="@+id/button4"
        android:minHeight="30dp"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dip"
        android:id="@+id/button5"
        android:minHeight="30dp"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button6" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dip"
        android:id="@+id/button6"
        android:minHeight="30dp"
        android:layout_below="@+id/button5"
        android:layout_alignStart="@+id/button7" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dip"
        android:id="@+id/button7"
        android:minHeight="30dp"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/button8" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dip"
        android:id="@+id/button8"
        android:minHeight="30dp"
        android:layout_below="@+id/button7"
        android:layout_alignStart="@+id/button9" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dip"
        android:id="@+id/button9"
        android:minHeight="30dp"
        android:layout_below="@+id/button8"
        android:layout_alignStart="@+id/button1" />

    <Button
        android:text="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dip"
        android:id="@+id/button10"
        android:minHeight="30dp"
        android:layout_below="@+id/button9"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textStatus2"
        android:textSize="25sp"
        android:layout_below="@+id/textStatus1"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dip"
        android:id="@+id/button1"
        android:layout_marginTop="21dp"
        android:minHeight="30dp"
        android:layout_below="@+id/textStatus2"
        android:layout_alignEnd="@+id/button10" />

    <TextView
        android:text="Level:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textLevel"
        android:textSize="25sp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/textStatus2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Score:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textScore"
        android:textSize="25sp"
        android:layout_below="@+id/textLevel"
        android:layout_alignStart="@+id/textLevel" />

    <Button
        android:text="Play again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAgain"
        android:layout_below="@+id/textStatus2"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
